{
  "name": "ubvh-genesis-core",
  "version": "1.0.0",
  "description": "Universal Blockchain Verification Hub (UBVH) powered by ADN_iD - Master Verification Layer for all blockchain networks",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "docker:build": "docker build -t ubvh-core .",
    "docker:run": "docker run -p 3000:3000 ubvh-core",
    "migrate": "typeorm migration:run",
    "migrate:revert": "typeorm migration:revert",
    "schema:sync": "typeorm schema:sync",
    "seed": "ts-node src/database/seeds/index.ts"
  },
  "keywords": [
    "blockchain",
    "verification",
    "islamic-finance",
    "adnid",
    "ubvh",
    "genesis-protocol",
    "quantum-security",
    "universal-explorer",
    "master-verification-layer"
  ],
  "author": "Muhammad Adnan Ul Mustafa <adnanmd76@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Adnanmd76/ADANiD-Genesis-Core.git"
  },
  "dependencies": {
    "@nestjs/common": "^10.2.8",
    "@nestjs/core": "^10.2.8",
    "@nestjs/platform-express": "^10.2.8",
    "@nestjs/typeorm": "^10.0.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/passport": "^10.0.2",
    "@nestjs/swagger": "^7.1.16",
    "@nestjs/websockets": "^10.2.8",
    "@nestjs/platform-socket.io": "^10.2.8",
    "typeorm": "^0.3.17",
    "pg": "^8.11.3",
    "redis": "^4.6.10",
    "ioredis": "^5.3.2",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "compression": "^1.7.4",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "class-validator": "^0.14.0",
    "class-transformer": "^0.5.1",
    "uuid": "^9.0.1",
    "crypto": "^1.0.1",
    "node-forge": "^1.3.1",
    "elliptic": "^6.5.4",
    "secp256k1": "^5.0.0",
    "bip39": "^3.1.0",
    "hdkey": "^2.1.0",
    "ethereumjs-util": "^7.1.5",
    "web3": "^4.2.2",
    "ethers": "^6.8.1",
    "axios": "^1.6.0",
    "socket.io": "^4.7.4",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "dotenv": "^16.3.1",
    "config": "^3.3.9",
    "joi": "^17.11.0",
    "moment": "^2.29.4",
    "lodash": "^4.17.21",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.32.6",
    "aws-sdk": "^2.1489.0",
    "@aws-sdk/client-s3": "^3.454.0",
    "@aws-sdk/client-rekognition": "^3.454.0",
    "@aws-sdk/client-kms": "^3.454.0",
    "openai": "^4.20.1",
    "@pinecone-database/pinecone": "^1.1.2",
    "stripe": "^14.5.0",
    "paypal-rest-sdk": "^1.8.1",
    "twilio": "^4.19.0",
    "nodemailer": "^6.9.7",
    "qrcode": "^1.5.3",
    "speakeasy": "^2.0.0",
    "node-cron": "^3.0.3",
    "bull": "^4.12.0",
    "prometheus-api-metrics": "^3.2.2",
    "swagger-ui-express": "^5.0.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@types/node": "^20.8.10",
    "@types/express": "^4.17.21",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/passport-jwt": "^3.0.13",
    "@types/passport-local": "^1.0.38",
    "@types/uuid": "^9.0.7",
    "@types/lodash": "^4.14.202",
    "@types/multer": "^1.4.11",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/qrcode": "^1.5.5",
    "@types/speakeasy": "^2.0.10",
    "@types/node-cron": "^3.0.11",
    "@types/jest": "^29.5.8",
    "@types/supertest": "^2.0.16",
    "typescript": "^5.2.2",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3",
    "eslint": "^8.53.0",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "prettier": "^3.0.3",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.2",
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": ["<rootDir>/src"],
    "testMatch": ["**/__tests__/**/*.ts", "**/?(*.)+(spec|test).ts"],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/database/migrations/**",
      "!src/database/seeds/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"]
  }
}